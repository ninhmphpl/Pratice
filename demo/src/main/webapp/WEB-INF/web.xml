<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- create cookie -->
    <servlet>
        <servlet-name>CreateCookie</servlet-name>
        <servlet-class>com.example.demo.HelloServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CreateCookie</servlet-name>
        <url-pattern>/CreateCookie</url-pattern>
    </servlet-mapping>

    <!-- read cookie -->
    <servlet>
        <servlet-name>ReadCookie</servlet-name>
        <servlet-class>com.example.demo.ServletReadCookie</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ReadCookie</servlet-name>
        <url-pattern>/ReadCookie</url-pattern>
    </servlet-mapping>
</web-app>
